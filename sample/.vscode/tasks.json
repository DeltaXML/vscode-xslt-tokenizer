{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "xslt",
			"label": "Basic Transform",
			"saxonJar": "${config:XSLT.tasks.saxonJar}",
			"xsltFile": "${workspaceFolder}/src/xsl/basic.xsl",
			"xmlSource": "${workspaceFolder}/src/xsl/basic.xsl",
			"resultPath": "${workspaceFolder}/out/${fileBasenameNoExtension}.xml",
			"parameters": [
				{
					"name": "p1",
					"value": "p1value"
				},
				{
					"name": "p2",
					"value": "p2value"
				}
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"classPathEntries": [
				"/xrc/utilitiy.class1",
				"/xrc/utility.class2"
			],
			"group": {
				"kind": "build"
			},
			"problemMatcher": "$saxon-xslt.workspace.src.xsl"
		},
		{
			"type": "xslt",
			"label": "Compile Active XSLT File",
			"saxonJar": "${config:XSLT.tasks.saxonJar}",
			"xsltFile": "${file}",
			"xmlSource": "${file}",
			"resultPath": "${workspaceFolder}/out/${fileBasenameNoExtension}.xml",
			"group": {
				"kind": "build"
			},
			"problemMatcher": "$saxon-xslt"
		},
		{
			"type": "xslt",
			"label": "XSLT 4 Experimental",
			"saxonJar": "${config:XSLT.tasks.saxonJar}",
			"xsltFile": "${file}",
			"xmlSource": "${file}",
			"resultPath": "${workspaceFolder}/xslt-out/result1.xml",
			"allowSyntaxExtensions40": "on",
			"group": {
				"kind": "build"
			},
			"problemMatcher": [
				"$saxon-xslt"
			]
		},
		{
			"type": "xslt",
			"label": "xslt3",
			"saxonJar": "${config:XSLT.tasks.saxonJar}",
			"xsltFile": "${file}",
			"xmlSource": "${file}",
			"resultPath": "${workspaceFolder}/xslt-out/result1.xml",
			"allowSyntaxExtensions40": "off",
			"group": {
				"kind": "build"
			},
			"problemMatcher": [
				"$saxon-xslt"
			]
		}
	]
}