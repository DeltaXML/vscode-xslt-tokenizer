// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Jest: Current File",
			"program": "${workspaceFolder}/node_modules/.bin/jest",
			"args": [
				"--runInBand",
				"--config",
				"jest.config.js",
				"${file}"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
			},
		{
			"name": "Run Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test"
			],
			"outFiles": [
				"${workspaceFolder}/out/test/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
            "type": "node",
            "request": "launch",
            "name": "Add expected tokens to XP Lexer Test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/out/__tests__/utils/xpLexerTestGen.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
			"console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/out/test/**/*.js"
            ],
			"args": [
				"--file", "${workspaceFolder}/__tests__/data/as-attributes-to-json-out.json"
			]
		},
		{
            "type": "node",
            "request": "launch",
            "name": "Run XPath Diagnostics",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/out/xpLexerRun.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/out/test/**/*.js"
            ]
		},
		{
            "type": "node",
            "request": "launch",
            "name": "Run XSL Diagnostics",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/out/xslLexerRun.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/out/test/**/*.js"
            ]
        }
	]
}
