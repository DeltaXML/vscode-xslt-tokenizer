{
	"name": "xslt-tokenizer",
	"displayName": "xslt-tokenizer",
	"description": "Showing the Semantic Tokens Provider API being used for XPath3.1",
	"version": "0.0.1",
	"publisher": "pgfearo",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:xpath",
		"onLanguage:xslt"
	],
	"enableProposedApi": true,
	"main": "./out/extension.js",
	"contributes": {
		"semanticTokenTypes": [{
			"id": "attributeNameTest", 
			"description": "An attribute node test in a step expression"
		},
		{
			"id": "nodeNameTest", 
			"description": "A node test in a step expression"
		},
		{
			"id": "uriLiteral", 
			"description": "A URI literal of the form: Q{uri}"
		},
		{
			"id": "nodeType", 
			"description": "type of node, e.g. element()"
		},
		{
			"id": "simpleType", 
			"description": "type of value, e.g. xs:integer"
		},
		{
			"id": "axisName", 
			"description": "XPath axis, e.g. descendant::"
		},
		{
			"id": "complexExpression",
			"description": "multi-part expression keyword, e.g. let,:=,return"
		},
		{
			"id": "attributeName",
			"description": "XML attribute name"
		},
		{
			"id": "attributeValue",
			"description": "XML attribute value"
		},
		{
			"id": "elementName",
			"description": "XML element name"
		},
		{
			"id": "elementValue",
			"description": "XML element text node"
		},
		{
			"id": "processingInstrName",
			"description": "Processing Instruction name"
		},
		{
			"id": "processingInstrValue",
			"description": "Processing Instruction value"
		},
		{
			"id": "entityRef",
			"description": "XML Entity Reference - e.g. '&lt;'"
		},
		{
			"id": "xmlComment",
			"description": "XML Comment"
		},
		{
			"id": "xslElementName",
			"description": "Name of XSLT Element"
		}
		],
		"semanticTokenStyleDefaults": [
			{
				"selector": "nodeNameTest",
				"scope": [ "support.class" ]
			},
			{
				"selector": "attributeNameTest",
				"scope": ["storage.type.struct"]
			},
			{
				"selector": "uriLiteral",
				"scope": ["constant"]
			},
			{
				"selector": "nodeType",
				"scope": ["variable.parameter"]
			},
			{
				"selector": "simpleType",
				"scope": ["variable.parameter"]
			},
			{
				"selector": "axisName",
				"scope": ["label"]
			},
			{
				"selector": "complexExpression",
				"scope": ["keyword.control"]
			},
			{
				"selector": "attributeName",
				"scope": []
			},
			{
				"selector": "attributeValue",
				"scope": []
			},
			{
				"selector": "elementName",
				"scope": []
			},
			{
				"selector": "elementValue",
				"scope": []
			},
			{
				"selector": "processingInstrName",
				"scope": ["storage.type.struct"]
			},
			{
				"selector": "processingInstrValue",
				"scope": []
			},
			{
				"selector": "entityRef",
				"scope": []
			},
			{
				"selector": "xmlComment",
				"scope": []
			},
			{
				"selector": "xslElementName",
				"scope": ["storage.type.struct"]
			}
		],
		"languages": [
			{
				"id": "xpath",
				"aliases": [
					"XPath",
					"xpath"
				],
				"extensions": [
					".xpath"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "xslt",
				"aliases": [
					"XSLT",
					"xslt"
				],
				"extensions": [
					".xsl",
					".xslt"
				],
				"configuration": "./xsl-language-configuration.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./",
		"test": "jest"
	},
	"devDependencies": {
		"@types/jest": "^24.0.25",
		"@types/node": "^10.14.17",
		"@types/vscode": "^1.32.0",
		"jest": "^24.9.0",
		"ts-jest": "^24.3.0",
		"tslint": "^5.16.0",
		"typescript": "^3.5.1"
	}
}
